<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Records">

    <RelativeLayout
        android:id="@+id/records_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:backgroundTint="@color/colorMaroon"
        android:background="@drawable/layout_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your \nAppointments"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/doctors1"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:elevation="10dp"
        android:padding="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorWhite"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dentist"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="5dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/doc"
                android:text="10-9-2020"
                android:drawableStart="@drawable/ic_appointment"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/doc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/date"
                android:layout_below="@id/doc"
                android:text="11:30"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_access_time_black_24dp"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:text="Broken Tooth"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_text_fields"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:padding="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorWhite"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Doctor"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="5dp" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/doc1"
                android:text="10-9-2020"
                android:drawableStart="@drawable/ic_appointment"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/doc_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/date1"
                android:layout_below="@id/doc1"
                android:text="11:30"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_access_time_black_24dp"/>

            <TextView
                android:id="@+id/desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date1"
                android:text="Stomach Ache"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_text_fields"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>